<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Movie Details</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <!-- Include Tailwind CDN -->
  </head>
  <body class="bg-gray-800 text-gray-100 font-sans">
    <!-- Main container -->
    <div class="max-w-4xl mx-auto p-6 space-y-12">
      <!-- Header section -->
      <div class="text-center">
        <h2 class="text-4xl font-bold text-orange-400">Update Movie Details</h2>
        {{#if movie.title}}
          <h1 class="text-2xl font-bold text-yellow-400">{{movie.title}}</h1>
        {{/if}}
        {{#if movie.image}}
          <img
            src="{{movie.image}}"
            alt="Movie Poster"
            class="mx-auto mt-6 rounded-xl shadow-xl w-full max-w-md"
          />
        {{/if}}
      </div>

      <!-- Success or Error Messages -->
      {{#if successMessage}}
        <div class="bg-green-500 text-green-100 rounded-lg p-4">
          <p>{{successMessage}}</p>
        </div>
      {{/if}}
      {{#if errorMessage}}
        <div class="bg-red-500 text-red-100 rounded-lg p-4">
          <p>{{errorMessage}}</p>
        </div>
      {{/if}}

      <!-- Form section -->
      <form
        action="/update-movie/{{movie._id}}"
        method="POST"
        class="bg-gray-900 rounded-xl shadow-lg p-8 space-y-6"
      >
        <h2 class="text-2xl font-semibold text-yellow-400 text-center">
          Movie Information
        </h2>

        <!-- Title Input -->
        {{#if movie.title}}
          <div>
            <label
              for="title"
              class="block text-sm font-medium text-yellow-400"
            >
              Title
            </label>
            <input
              type="text"
              id="title"
              name="title"
              value="{{movie.title}}"
              class="mt-1 w-full bg-gray-700 border border-gray-600 rounded-lg px-4 py-2 focus:outline-none"
              disabled
            />
          </div>
        {{/if}}

        <!-- Primary Image Input -->
        {{#if movie.image}}
          <div>
            <label
              for="primaryImage"
              class="block text-sm font-medium text-yellow-400"
            >
              Primary Image URL
            </label>
            <input
              type="text"
              id="primaryImage"
              name="primaryImage"
              value="{{movie.image}}"
              class="mt-1 w-full bg-gray-700 border border-gray-600 rounded-lg px-4 py-2 focus:outline-none focus:ring-2 focus:ring-yellow-400"
              required
            />
          </div>
        {{/if}}

        <!-- Release Year Input -->
        {{#if movie.releaseYear}}
          <div>
            <label
              for="releaseYear"
              class="block text-sm font-medium text-yellow-400"
            >
              Release Year
            </label>
            <input
              type="number"
              id="releaseYear"
              name="releaseYear"
              value="{{movie.releaseYear}}"
              class="mt-1 w-full bg-gray-700 border border-gray-600 rounded-lg px-4 py-2 focus:outline-none focus:ring-2 focus:ring-yellow-400"
              required
            />
          </div>
        {{/if}}

        <!-- Categories Input -->
        {{#if movie.categories.value}}
          <div>
            <label
              for="categories"
              class="block text-sm font-medium text-yellow-400"
            >
              Categories
            </label>
            <input
              type="text"
              id="categories"
              name="categories"
              value="{{movie.categories.value}}"
              class="mt-1 w-full bg-gray-700 border border-gray-600 rounded-lg px-4 py-2 focus:outline-none focus:ring-2 focus:ring-yellow-400"
            />
          </div>
        {{/if}}

        <!-- Runtime Input -->
        {{#if movie.runTime}}
          <div>
            <label
              for="runtime"
              class="block text-sm font-medium text-yellow-400"
            >
              Runtime (in seconds)
            </label>
            <input
              type="number"
              id="runtime"
              name="runtime"
              value="{{movie.runTime}}"
              class="mt-1 w-full bg-gray-700 border border-gray-600 rounded-lg px-4 py-2 focus:outline-none"
              disabled
            />
          </div>
        {{/if}}

        <!-- Release Date Inputs -->
        {{#if movie.releaseDate}}
          <div>
            <label
              for="releaseDate"
              class="block text-sm font-medium text-yellow-400"
            >
              Release Date
            </label>
            <div class="flex gap-4 mt-1">
              {{#if movie.releaseDate.year}}
                <input
                  type="number"
                  name="releaseDate[year]"
                  placeholder="Year"
                  value="{{movie.releaseDate.year}}"
                  class="w-1/3 bg-gray-700 border border-gray-600 rounded-lg px-4 py-2 focus:outline-none focus:ring-2 focus:ring-yellow-400"
                  disabled
                />
              {{/if}}
              {{#if movie.releaseDate.month}}
                <input
                  type="number"
                  name="releaseDate[month]"
                  placeholder="Month"
                  value="{{movie.releaseDate.month}}"
                  class="w-1/3 bg-gray-700 border border-gray-600 rounded-lg px-4 py-2 focus:outline-none focus:ring-2 focus:ring-yellow-400"
                  disabled
                />
              {{/if}}
              {{#if movie.releaseDate.day}}
                <input
                  type="number"
                  name="releaseDate[day]"
                  placeholder="Day"
                  value="{{movie.releaseDate.day}}"
                  class="w-1/3 bg-gray-700 border border-gray-600 rounded-lg px-4 py-2 focus:outline-none focus:ring-2 focus:ring-yellow-400"
                  disabled
                />
              {{/if}}
            </div>
          </div>
        {{/if}}

        <!-- Movie ID Input -->
        {{#if movie._id}}
          <div>
            <label
              for="movieID"
              class="block text-sm font-medium text-yellow-400"
            >
              ID
            </label>
            <input
              type="text"
              id="_id"
              name="_id"
              value="{{movie._id}}"
              class="mt-1 w-full bg-gray-700 border border-gray-600 rounded-lg px-4 py-2 focus:outline-none focus:ring-2 focus:ring-yellow-400"
              disabled
            />
          </div>
        {{/if}}

        <!-- Movie ID Input -->
        {{#if movie.movieID}}
          <div>
            <label
              for="movieID"
              class="block text-sm font-medium text-yellow-400"
            >
              Movie ID
            </label>
            <input
              type="text"
              id="movieID"
              name="movieID"
              value="{{movie.movieID}}"
              class="mt-1 w-full bg-gray-700 border border-gray-600 rounded-lg px-4 py-2 focus:outline-none focus:ring-2 focus:ring-yellow-400"
              disabled
            />
          </div>
        {{/if}}

        <!-- Download Link Input -->
        <div>
          <label
            for="daunloadlink"
            class="block text-sm font-medium text-yellow-400"
          >
            Download Link
          </label>
          <input
            type="text"
            id="daunloadlink"
            name="daunloadlink"
            class="mt-1 w-full bg-gray-700 border border-gray-600 rounded-lg px-4 py-2 focus:outline-none focus:ring-2 focus:ring-yellow-400"
          />
        </div>

        <!-- Submit Button -->
        <button
          type="submit"
          class="w-full bg-yellow-400 text-black font-semibold py-3 rounded-lg hover:bg-yellow-500 transition duration-300"
        >
          Submit
        </button>
      </form>

      <!-- Back to Dashboard link -->
      <div class="text-center">
        <a
          href="/"
          class="text-blue-400 hover:text-blue-300 text-lg font-medium transition duration-300"
        >
          Go to Dashboard
        </a>
      </div>
    </div>
  </body>
</html>