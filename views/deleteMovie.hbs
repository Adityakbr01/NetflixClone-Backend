<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Delete Movie List</title>
    <script src="https://cdn.tailwindcss.com"></script>
  </head>
  <body class="bg-gray-100 text-gray-800">
    <div class="container mx-auto p-6">
      <h2 class="text-2xl font-bold mb-6 text-center">Delete Movie</h2>

      <!-- Success Message -->
      {{#if successMessage}}
      <div
        class="bg-green-100 border border-green-400 text-green-700 px-4 py-3 rounded mb-4"
        role="alert"
      >
        {{successMessage}}
      </div>
      {{/if}}

      <!-- Error Message -->
      {{#if error}}
      <div
        class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded mb-4"
        role="alert"
      >
        {{error}}
      </div>
      {{/if}}

      <!-- Movies Grid -->
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
        {{#each movies}}
          <div class="bg-white shadow-md rounded-lg overflow-hidden">
            <!-- Movie Image -->
            <img
              src="{{this.image}}"
              alt="{{this.title}}"
              class="w-full h-48 object-cover"
            />

            <!-- Movie Details -->
            <div class="p-4">
              <!-- Movie Title -->
              <h3
                class="text-lg font-bold text-gray-900 mb-2"
              >{{this.title}}</h3>

              <!-- Movie ID -->
              <p class="text-gray-700 font-semibold mb-2">
                Movie ID:
                <span class="text-gray-900">{{this._id}}</span>
              </p>

              <!-- Release Date -->
              <p class="text-gray-700 font-semibold mb-4">
                Release Date:
                <span class="text-gray-900">
                  {{this.releaseDate.month}}-{{this.releaseDate.day}}-{{this.releaseDate.year}}
                </span>
              </p>

              <!-- Delete Form -->
              <form action="/delete-movie/{{this._id}}" method="POST">
                <button
                  type="submit"
                  class="bg-red-500 text-white px-4 py-2 rounded hover:bg-red-600 focus:outline-none focus:ring-2 focus:ring-red-300"
                >
                  Delete
                </button>
              </form>
            </div>
          </div>
        {{/each}}
      </div>
    </div>
  </body>
</html>
